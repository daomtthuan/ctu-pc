{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "experimentalDecorators": true,
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "typeRoots": ["./@types"],
    "types": [
      "@types/node",
      "@nuxt/types",
      "vue-class-component/hooks",
      "@types/nuxtjs__auth",
      "bootstrap-vue",
      "@nuxtjs/axios",
      "@types/vuelidate",
      "@types/vue2-editor"
    ]
  },
  "exclude": ["node_modules"]
}
